<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.ChangeBackgroud">

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >


        <RadioButton
            android:background="@color/colorWhite"
            android:id="@+id/radio_color_black"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_51"
            android:text="@string/text_color_black" />

        <RadioButton
            android:background="@color/colorWhite"
            android:id="@+id/radio_color_red"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_51"
            android:text="@string/text_color_red" />

        <RadioButton
            android:id="@+id/radio_color_blue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_51"
            android:background="@color/colorWhite"
            android:text="@string/text_color_blue" />

    </RadioGroup>

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_51"
        android:background="@color/colorWhite"
        android:text="@string/text_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/button_confirm"
        app:layout_constraintTop_toBottomOf="@+id/radio_group" />

    <Button
        android:id="@+id/button_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_84"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/colorWhite"
        android:text="@string/text_confim"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radio_group" />
</android.support.constraint.ConstraintLayout>

